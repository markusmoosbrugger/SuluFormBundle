            <title>sulu_form.width</title>
        </meta>
        <params>
            <param name="label">
                <meta>
                    <title>sulu_form.width</title>
                </meta>
            </param>
            <param name="default_value" value="0"/>
            <param name="values" type="collection">
                <param name="0">
                    <meta>
                        <title>sulu_form.full</title>
                    </meta>
                </param>
                <param name="1">
                    <meta>
                        <title>sulu_form.half</title>
                    </meta>
                </param>
                <param name="2">
                    <meta>
                        <title>sulu_form.one_third</title>
                    </meta>
                </param>
            </param>
        </params>
    </property>
